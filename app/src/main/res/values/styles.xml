    <style name="EmptyListMessageStyle">
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="fontPath">fonts/roboto_medium.ttf</item>
        <item name="android:textColor">@color/light_grey3</item>
    </style>

    <style name="TextInputStyle.Picker">
        <item name="android:focusable">false</item>
